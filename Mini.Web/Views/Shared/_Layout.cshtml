<!--登录页和首页模板-->
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment HostingEnvironment
<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />

    <meta name="keywords" content="后台管理系统">
    <meta name="description" content="后台管理系统">

    <link rel="bookmark" href='@Url.Content("~/favicon.ico")' />
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />

    <script type="text/javascript" src='@Url.Content("~/lib/jquery/2.1.4/jquery.min.js")'></script>
    <script type="text/javascript" src='@Url.Content("~/lib/bootstrap/3.3.7/js/bootstrap.min.js")'></script>
    <script type="text/javascript" src='@Url.Content("~/lib/layer/3.1.1/layer.min.js")'></script>
    <script type="text/javascript" src='@Url.Content("~/customize/js/index.js")'></script>
    <link href='@Url.Content("~/customize/toastr/toastr.css")' rel="stylesheet" />
    <script src='@Url.Content("~/customize/toastr/toastr.min.js")'></script>
    <script src='@Url.Content("~/customize/js/pack.js")'></script>
    <!--首页需要用到的js开始-->
    <link href='@Url.Content("~/lib/bootstrap/3.3.7/css/bootstrap.css")' rel="stylesheet" />
    <link href='@Url.Content("~/lib/fontawesome/4.7.0/css/fontawesome.min.css")' rel="stylesheet" />
    <link href='@Url.Content("~/customize/css/style.min.css")' rel="stylesheet" />


    <script type="text/javascript" src='@Url.Content("~/lib/jquery.metisMenu/1.1.3/jquery.metisMenu.js")'></script>
    <script type="text/javascript" src='@Url.Content("~/lib/jquery.slimscroll/1.3.8/jquery.slimscroll.min.js")'></script>
    <!--首页需要用到的js结束-->
    @RenderSection("header", false)
    <title>一沙后台管理系统</title>
    <style type="text/css">
        .nav > li:hover .dropdown-menu {
            display: block;
        }
    </style>
    <script type="text/javascript">
        var ctx = '@Url.Content("~/")';
    </script>
</head>
<body class="fixed-sidebar full-height-layout gray-bg login">
    @RenderBody()
    @RenderSection("footer", false)
    <link href='@Url.Content("~/customize/css/yisha.css")' rel="stylesheet" />
    @*初始化权限*@
    <script type="text/javascript" src='@Url.Content("~/customize/js/init.min.js")'></script>
</body>
</html>
